@model IEnumerable<maealim.Models.MGuide>


@{
    ViewData["Title"] = " المرشدين ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1> المرشدين </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item "><a asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                    <li class="breadcrumb-item active">المرشدين </li>

                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <partial name="_StatusMessages" />
    <!-- Default box -->
    <div class="card">

        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-list-alt"></i>
                المرشدين
            </h3>
            <a asp-action="Create" class="btn  btn-primary  btn-sm text-white float-left m-0">
                <i class="fas fa-plus-circle"></i>
                اضافة مرشد
            </a>
        </div>
        <div class="card-body">


            <div class="table-responsive">
                <table class="table tab-content table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Country)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bank)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.University)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Stage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Level)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Language)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Specialization)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AppUser)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.College)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mobile)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int i = 1;

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@i</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bank.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.University.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stage.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Level.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Language.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Specialization.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppUser.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.College.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-success ml-1">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <form asp-action="Delete" asp-route-id="@item.Id">
                                                <span id="confirmDeleteSpan_@item.Id" style="display:none">
                                                    <span>هل تريد الحذف ؟</span>
                                                    <button type="submit" class="btn btn-danger">نعم</button>
                                                    <a href="#" class="btn btn-primary"
                                                       onclick="confirmDelete('@item.Id', false)">لا</a>
                                                </span>
                                                <span id="deleteSpan_@item.Id">
                                                    <a href="#" class="btn btn-danger"
                                                       onclick="confirmDelete('@item.Id', true)">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </span>
                                            </form>







                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr class="text-center">
                                <td colspan="13">لاتوجد بيانات</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

        <!-- /.card-body -->
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


